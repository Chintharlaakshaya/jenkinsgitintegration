pipeline {
    agent any

    tools {
        maven 'Maven3'   // make sure you configured Maven in Jenkins (Manage Jenkins > Global Tool Configuration)
        jdk 'JDK17'      // configure JDK 17 in Jenkins and use the same name
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Chintharlaakshaya/jenkinsgitintegration.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh "mvn clean install -DskipTests"
            }
        }

        stage('Run Tests') {
            steps {
                sh "mvn clean test -DsuiteXmlFile=testng.xml"
            }
        }

        stage('Publish TestNG Report') {
            steps {
                publishHTML(target: [
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'test-output',
                    reportFiles: 'index.html',
                    reportName: 'TestNG HTML Report'
                ])
            }
        }

        stage('Archive Extent Report & Screenshots') {
            steps {
                archiveArtifacts artifacts: 'reports/**', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
        }
        success {
            echo '✅ Build & Tests Successful!'
        }
        failure {
            echo '❌ Build or Tests Failed. Check reports.'
        }
    }
}
